{
  "name": "gifted-md",
  "version": "5.0.0",
  "description": "Gifted-MD is a simple WhatsApp bot built with Node.js to enhance WhatsApp communication experience",
  "website": "https://session.giftedtech.co.ke",
  "dev_email": "mauricegift@gmail.com",
  "logo": "https://files.catbox.moe/52699c.jpg",
  "keywords": ["gifted-md", "whatsapp-bot", "nodejs"],
  "repository": "https://github.com/mauricegift/gifted-md",
  "success_url": "/",
  "stack": "heroku-24",

  "env": {
    "SESSION_ID": {
      "description": "Put your session ID here. Must start with 'PRINCE-MDX~'",
      "required": true,
      "value": "PRINCE-MDX~"
    },

    "MODE": {
      "description": "Bot mode: 'public' (all chats), 'inbox' (DM only), or 'private' (owner only). Default is 'public'.",
      "required": false,
      "value": "private"
    },

    "OWNER_NAME": {
      "description": "Bot owner name",
      "required": true,
      "value": "Crewgah"
    },

    "OWNER_NUMBER": {
      "description": "Owner phone number (one number only, no + sign). Example: 237xxxxxxxx",
      "required": true,
      "value": "2349021018786"
    },

    "ANTI_DELETE": {
      "description": "Set to 'true' (all chats), 'inboxonly', 'chatsonly', or 'false'.",
      "required": false,
      "value": "inboxonly"
    },

    "SUDO_NUMBERS": {
      "description": "Comma-separated sudo numbers. Leave empty if not needed.",
      "required": false,
      "value": ""
    },

    "AUTO_READ_STATUS": {
      "description": "Set to 'true' to auto-view statuses.",
      "required": false,
      "value": "false"
    },

    "AUTO_LIKE_STATUS": {
      "description": "Set to 'true' to auto-like statuses.",
      "required": false,
      "value": "false"
    },

    "STATUS_LIKE_EMOJIS": {
      "description": "Custom emojis for liking status (comma-separated).",
      "required": false,
      "value": "üíú,üíõ,‚ù§Ô∏è,ü§ç,üíô"
    },

    "AUTO_REPLY_STATUS": {
      "description": "Set to 'true' to auto-reply after viewing a status.",
      "required": false,
      "value": "false"
    },

    "STATUS_REPLY_MSG": {
      "description": "Message sent when auto-replying to status.",
      "required": false,
      "value": "Status Viewed ‚úÖÔ∏è"
    },

    "AUTO_READ_MESSAGES": {
      "description": "Set to 'true' (all messages), 'commands' (commands only), or 'false'.",
      "required": false,
      "value": "false"
    },

    "PRESENCE": {
      "description": "Presence type: 'online', 'typing', 'recording', or 'null'.",
      "required": false,
      "value": "null"
    },

    "ANTILINK": {
      "description": "Set to 'true', 'delete', 'warn', or leave empty to disable.",
      "required": false,
      "value": ""
    },

    "AUTO_BLOCK": {
      "description": "Comma-separated country codes to auto-block. Example: 233,234,237",
      "required": false,
      "value": ""
    },

    "ANTICALL": {
      "description": "Set to 'true' to reject calls or 'block' to reject and block caller.",
      "required": false,
      "value": "false"
    },

    "BOT_NAME": {
      "description": "Bot display name (keep font style consistent).",
      "required": false,
      "value": "Gifted Md"
    },

    "PREFIX": {
      "description": "Bot command prefix.",
      "required": false,
      "value": "."
    }
  },

  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-activestorage-preview"
    },
    {
      "url": "heroku/nodejs"
    }
  ]
}
